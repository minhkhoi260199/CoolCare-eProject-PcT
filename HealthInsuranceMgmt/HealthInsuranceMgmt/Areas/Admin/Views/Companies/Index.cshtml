
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    #companiesTable tr th {
        color: white;
        font-weight: bold;
        font-size: 15px
    }

    #companiesTable tbody tr td {
        color: black;
    }
</style>
<div style="text-align:center">
    <div class="form-control">
        <button id="createNew" type="button" class="btn btn-success">Create New Company</button>
    </div>
    <div class="table-responsive table-responsive-data2">
        <table class="table table-data2" id="companiesTable">
            <thead style="background-color:black">
                <tr>
                    <th>
                        Index
                    </th>
                    <th>
                        Company's Name
                    </th>
                    <th>
                        Address
                    </th>
                    <th>
                        Phone
                    </th>
                    <th>
                        Url
                    </th>
                    <th>
                        Function Buttons
                    </th>
                </tr>
            </thead>
            <tbody id="companiesTableBody">
            </tbody>
        </table>
    </div>
</div>
<script src="~/js/Admin/companies/companiesList.js"></script>


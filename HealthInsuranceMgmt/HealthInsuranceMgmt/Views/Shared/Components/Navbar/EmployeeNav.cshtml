@using Microsoft.AspNetCore.Http;
        <!-- HEADER DESKTOP-->
        <header class="header-desktop3 d-none d-lg-block">
            <div class="section__content section__content--p35">
                <div class="header3-wrap">
                    <div class="header__logo">
                        <a href="#">
                            <img src="~/images/icon/logo-white-client.png" alt="CoolCare" />
                        </a>
                    </div>
                    <div class="header__navbar">
                        <ul class="list-unstyled">
                            <li>
                                <a asp-controller="employee" asp-action="index">
                                    <i class="fas fa-home"></i>Home
                                    <span class="bot-line"></span>
                                </a>
                            </li>
                            <li class="has-sub">
                                <a href="#">
                                    <i class="fas fa-copy"></i>
                                    <span class="bot-line"></span>Reference
                                    </a>
                                <ul class="header3-sub-list list-unstyled">
                                    <li>
                                        <a asp-controller="company" asp-action="index">
                                            <i class="fas fa-home"></i>Companies
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-controller="hospital" asp-action="index">
                                            <i class="fas fa-plus-square"></i>Hospital
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="has-sub">
                                <a href="#">
                                    <i class="fas fa-heart"></i>
                                    <span class="bot-line"></span>Requests</a>
                                <ul class="header3-sub-list list-unstyled">
                                    <li>
                                        <i class="fas fa-plus-square"></i>
                                        <a asp-controller="company" asp-action="index">For Insurances</a>
                                    </li>
                                    <li>
                                        <i class="fas fa-plus-square"></i>
                                        <a asp-controller="request" asp-action="index">For Bills</a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                    <div class="header__tool">
                        <div class="account-wrap">
                            <div class="account-item account-item--style2 clearfix js-item-menu">
                                <div class="image">
                                    <img src="~/images/icon/avatar-01.jpg" alt="avatar" />
                                </div>
                                <div class="content">
                                    <a class="js-acc-btn" href="#">@Context.Session.GetString("userName")</a>
                                </div>
                                <div class="account-dropdown js-dropdown">
                                    <div class="info clearfix">
                                        <div class="image">
                                            <a href="#">
                                                <img src="~/images/icon/avatar-01.jpg" alt="avatar" />
                                            </a>
                                        </div>
                                        <div class="content">
                                            <h5 class="name">
                                                <a href="#">@Context.Session.GetString("userName")</a>
                                            </h5>
                                        </div>
                                    </div>
                                    <div class="account-dropdown__body">
                                        <div class="account-dropdown__item">
                                            <a asp-controller="employee" asp-action="profile">
                                                <i class="zmdi zmdi-account"></i>View profile</a>
                                        </div>
                                    </div>
                                    <div class="account-dropdown__footer">
                                        <a asp-controller="auth" asp-action="logout">
                                            <i class="zmdi zmdi-power"></i>Logout</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- END HEADER DESKTOP-->

        <!-- HEADER MOBILE-->
        <header class="header-mobile header-mobile-2 d-block d-lg-none">
            <div class="header-mobile__bar">
                <div class="container-fluid">
                    <div class="header-mobile-inner">
                        <a class="logo" href="index.html">
                            <img src="~/images/icon/logo-white-client.png" alt="CoolCare" />
                        </a>
                        <button class="hamburger hamburger--slider" type="button">
                            <span class="hamburger-box">
                                <span class="hamburger-inner"></span>
                            </span>
                        </button>
                    </div>
                </div>
            </div>
            <nav class="navbar-mobile">
                <div class="container-fluid">
                    <ul class="navbar-mobile__list list-unstyled">
                        <li class="has-sub">
                            <a asp-controller="home" asp-action="index">
                                <i class="fas fa-home"></i>Home</a>
                        </li>
                        <li>
                            <a asp-controller="home" asp-action="index">
                                <i class="fas fa-copy"></i>News</a>
                        </li>
                        <li>
                            <a asp-controller="home" asp-action="index">
                                <i class="fas fa-heart"></i>About Us</a>
                        </li>
                        <li>
                            <a asp-controller="home" asp-action="index">
                                <i class="far fa-comments"></i>Contact Us</a>
                        </li>
                        <li>
                            <a asp-controller="home" asp-action="index">
                                <i class="fas fa-pencil-square"></i>Feed Back</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <div class="sub-header-mobile-2 d-block d-lg-none">
            <div class="header__tool">
                <div class="account-wrap">
                    <div class="account-item account-item--style2 clearfix js-item-menu">
                        <div class="image">
                            <img src="~/images/icon/avatar-01.jpg" alt="avatar" />
                        </div>
                        <div class="content">
                            <a class="js-acc-btn" href="#">@Context.Session.GetString("userName")</a>
                        </div>
                        <div class="account-dropdown js-dropdown">
                            <div class="info clearfix">
                                <div class="image">
                                    <a href="#">
                                        <img src="~/images/icon/avatar-01.jpg" alt="avatar" />
                                    </a>
                                </div>
                                <div class="content">
                                    <h5 class="name">
                                        <a href="#">@Context.Session.GetString("userName")</a>
                                    </h5>
                                </div>
                            </div>
                            <div class="account-dropdown__body">
                                <div class="account-dropdown__item">
                                    <a href="#">
                                        <i class="zmdi zmdi-account"></i>Account</a>
                                </div>
                            </div>
                            <div class="account-dropdown__footer">
                                <a asp-controller="auth" asp-action="logout">
                                    <i class="zmdi zmdi-power"></i>Logout</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END HEADER MOBILE -->

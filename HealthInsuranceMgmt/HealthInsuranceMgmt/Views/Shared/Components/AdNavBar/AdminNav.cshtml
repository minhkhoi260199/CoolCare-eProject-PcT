        <!-- HEADER DESKTOP-->
@using System.Security.Claims;
@{
    var firstName = User.FindFirst(ClaimTypes.Name);
    var email = User.FindFirst(ClaimTypes.Email);
    var role = User.FindFirst(ClaimTypes.Role);
}
<header class="header-desktop3 d-none d-lg-block">
    <div class="section__content section__content--p35">
        <div class="header3-wrap">
            <div class="header__logo">
                <a href="#">
                    <img src="~/images/icon/logo-white.png" alt="CoolAdmin" />
                </a>
            </div>
            <div class="header__navbar">
                <ul class="list-unstyled">
                    <li class="has-sub">
                        <a >
                            <i class="fas fa-copy"></i>
                            <span class="bot-line"></span>Reference</a>
                        <ul class="header3-sub-list list-unstyled">
                            <li>
                                <a asp-controller="employees" asp-action="index">
                                    <i class="fas fa-user"></i>Employee
                                    <span class="bot-line"></span>
                                </a>
                            </li>
                            <li>
                                <a asp-controller="hospitals" asp-action="index">
                                    <i class="fas fa-plus-square"></i>Hospital
                                    <span class="bot-line"></span>
                                </a>
                            </li>
                            <li>
                                <a asp-controller="companies" asp-action="index">
                                    <i class="fas fa-home"></i>Company
                                    <span class="bot-line"></span>
                                </a>
                            </li>
                            <li>
                                <a asp-controller="medicals" asp-action="index">
                                    <i class="fas fa-heart"></i>Medical
                                    <span class="bot-line"></span>
                                </a>
                            </li>
                            <li>
                                <a asp-controller="policies" asp-action="index">
                                    <i class="fas fa-pencil-square"></i>Policy
                                    <span class="bot-line"></span>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a asp-controller="policiesonemployees" asp-action="index">
                            <i class="fas fa-comments"></i>
                            <span class="bot-line"></span>List Policy On Employee
                        </a>
                    </li>
                    <li>
                        <a asp-controller="policyrequest" asp-action="index">
                            <i class="fas fa-comments"></i>
                            <span class="bot-line"></span>Request
                        </a>
                    </li>
                </ul>
            </div>
            <div class="header__tool">
                <div class="account-wrap">
                    <div class="account-item account-item--style2 clearfix js-item-menu">
                        <div class="image">
                            <img src="~/images/icon/avatar-01.jpg" alt="avatar" />
                        </div>
                        <div class="content">
                            <a class="js-acc-btn" href="#">@role.Value</a>
                        </div>
                        <div class="account-dropdown js-dropdown">
                            <div class="info clearfix">
                                <div class="image">
                                    <a href="#">
                                        <img src="~/images/icon/avatar-01.jpg" alt="avatar" />
                                    </a>
                                </div>
                                <div class="content">
                                    <h5 class="name">
                                        <a href="#">@firstName.Value</a>
                                    </h5>
                                    <span class="email">@email.Value</span>
                                </div>
                            </div>
                            <div class="account-dropdown__body">
                                <div class="account-dropdown__item">
                                    <a href="#">
                                        <i class="zmdi zmdi-account"></i>Account
                                    </a>
                                </div>
                                <div class="account-dropdown__item">
                                    <a href="#">
                                        <i class="zmdi zmdi-settings"></i>Setting
                                    </a>
                                </div>
                                <div class="account-dropdown__item">
                                    <a href="#">
                                        <i class="zmdi zmdi-money-box"></i>Billing
                                    </a>
                                </div>
                            </div>
                            <div class="account-dropdown__footer">
                                <a asp-controller="login" asp-action="logout">
                                    <i class="zmdi zmdi-power"></i>Logout
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- END HEADER DESKTOP-->
